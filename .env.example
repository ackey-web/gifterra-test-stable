# Alchemy RPC URL for Polygon Amoy Testnet
# Get your API key from: https://dashboard.alchemy.com/
# 重要: デモエンドポイントはCORSエラーが発生するため、実際のAPIキーが必要
VITE_ALCHEMY_RPC_URL=https://polygon-amoy.g.alchemy.com/v2/YOUR_ACTUAL_API_KEY

# OpenAI API Key for AI analysis features
# Get your API key from: https://platform.openai.com/api-keys
# Required for sentiment analysis and contribution heat analysis
VITE_OPENAI_API_KEY=sk-proj-your-openai-api-key-here

# ThirdWeb Client ID for Web3 functionality
# Get your client ID from: https://thirdweb.com/dashboard
# Required for wallet connections and smart contract interactions
VITE_THIRDWEB_CLIENT_ID=3e4c63f9a07ad8ed962ba1691be8fe2b

# Supabase Configuration
# Get your project URL and anon key from: https://app.supabase.com/project/_/settings/api
# Required for image storage and product data management
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-supabase-anon-key-here

# API Base URL (for purchase system)
# Development: leave empty or http://localhost:5173
# Production: https://your-vercel-app.vercel.app
VITE_API_BASE_URL=

# ====================================
# Smart Wallet Configuration (Account Abstraction)
# ====================================

# Enable Smart Wallet (default: true if factory is set)
# Set to "false" to disable smart wallet and use traditional wallets only
# VITE_ENABLE_SMART_WALLET=true

# Smart Wallet Factory Address
# Deploy your own factory contract or use thirdweb's default
# Required for Smart Wallet functionality (gasless transactions)
# Get from: https://thirdweb.com/dashboard/wallets/smart-wallet
VITE_SMART_WALLET_FACTORY=

# Paymaster URL (for gasless transactions)
# Get from thirdweb dashboard: https://thirdweb.com/dashboard/settings/gas-credits
# This enables sponsored gas fees for your users
VITE_PAYMASTER_URL=

# Gas Sponsorship Phase (1 or 2)
# Phase 1: Platform pays all gas fees (recommended for launch)
# Phase 2: Hybrid - Platform + Tenant split (cost optimization)
VITE_GAS_SPONSORSHIP_PHASE=1

# WalletConnect Project ID
# Get your project ID from: https://cloud.walletconnect.com/
# Required for WalletConnect support (mobile wallet connections)
VITE_WALLETCONNECT_PROJECT_ID=

# ====================================
# Token Configuration (Advanced)
# ====================================

# NHT Token Addresses (Utility Token)
# Override default token addresses if needed
# VITE_NHT_TESTNET_ADDRESS=0xYourCustomNHTTestnetAddress
# VITE_NHT_MAINNET_ADDRESS=0xYourCustomNHTMainnetAddress

# JPYC Token Addresses (Payment Token)
# Will be available once JPYC launches as electronic payment instrument
# VITE_JPYC_TESTNET_ADDRESS=0xJPYCTestnetAddress
# VITE_JPYC_MAINNET_ADDRESS=0xJPYCMainnetAddress

# ====================================
# Network Configuration
# ====================================

# Network Environment (testnet or mainnet)
# VITE_NETWORK=testnet

# ====================================
# Feature Flags (Gradual Integration)
# ====================================

# Enable legacy UI under /legacy route (default: true)
# Set to false to completely disable legacy UI
VITE_ENABLE_LEGACY_UI=true

# Enable new integrated features (default: false)
# Phase-by-phase feature rollout flags:

# Phase 2: History Integration (read-only transaction list)
VITE_ENABLE_NEW_HISTORY=false

# Phase 3: Flow Integration (send/receive flows)
VITE_ENABLE_NEW_FLOW=false

# Phase 4: Verified Integration (tenant system)
VITE_ENABLE_NEW_VERIFIED=false

# Phase 5: R2P Integration (real-to-physical features)
VITE_ENABLE_NEW_R2P=false

# Phase 6: Rewards Integration (kodomi, badges, ranking)
VITE_ENABLE_NEW_REWARDS=false