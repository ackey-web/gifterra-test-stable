# =========================================
# GIFTERRA クリーン再構築用 ENV
# =========================================
# このファイルを .env.local にコピーして使用してください
# cp .env.local.template .env.local

# ─────────────────────────────────────
# 🚨 開発モード設定（RPC負荷軽減）
# ─────────────────────────────────────
# ポーリング無効化（手動リフレッシュのみ）
VITE_POLL_INTERVAL_MS=0
VITE_ENABLE_AUTO_REFRESH=false

# ─────────────────────────────────────
# 🎛️ 機能フラグ（UI切替）
# ─────────────────────────────────────
# MVP UI有効化（デフォルト: true）
VITE_ENABLE_MVP_UI=true

# Legacy UI有効化（デフォルト: true）
VITE_ENABLE_LEGACY_UI=true

# Legacyウォレット使用（ThirdWeb）（デフォルト: false = Privy使用）
VITE_USE_LEGACY_WALLET=false

# Legacy側からのDB書き込み許可（デフォルト: false）
VITE_ALLOW_LEGACY_DB_WRITE=false

# デバッグモード（コンソールログ出力）
VITE_DEBUG_MODE=true

# ─────────────────────────────────────
# 🔐 認証（Privy）
# ─────────────────────────────────────
VITE_PRIVY_APP_ID=your_privy_app_id_here

# ─────────────────────────────────────
# ⛓️ ブロックチェーン（Polygon Mainnet）
# ─────────────────────────────────────
VITE_NETWORK=mainnet
VITE_CHAIN_ID=137
VITE_ALCHEMY_RPC_URL=https://polygon-mainnet.g.alchemy.com/v2/YOUR_KEY

# ─────────────────────────────────────
# 🪙 トークンアドレス
# ─────────────────────────────────────
# JPYC（電子決済手段） - Polygon Mainnet
VITE_JPYC_MAINNET_ADDRESS=0x6AE7Dfc73E0dDE2aa99ac063DcF7e8A63265108c

# NHT（報酬トークン） - Polygon Mainnet
VITE_NHT_MAINNET_ADDRESS=0xYourNHTAddressHere

# ─────────────────────────────────────
# 🗄️ Supabase（公開キーのみ）
# ─────────────────────────────────────
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your_anon_key_here

# ─────────────────────────────────────
# 🤖 AI機能（オプション）
# ─────────────────────────────────────
VITE_OPENAI_API_KEY=sk-your_key_or_leave_empty

# ─────────────────────────────────────
# 🔗 API Base URL
# ─────────────────────────────────────
# 開発: 空欄またはhttp://localhost:5173
# 本番: https://your-vercel-app.vercel.app
VITE_API_BASE_URL=

# ─────────────────────────────────────
# 🛡️ セキュリティ（R2P用）
# ─────────────────────────────────────
# HMAC署名検証用シークレット（サーバー側のみ）
# ⚠️ VITE_ プレフィックスなし = ブラウザに露出しない
R2P_HMAC_SECRET=your_random_256bit_secret_here
R2P_LINK_EXPIRY_SECONDS=3600

# ─────────────────────────────────────
# 📊 スコアシステム（グローバル）
# ─────────────────────────────────────
VITE_SCORE_REGISTRY_ADDRESS=0xYourScoreRegistryAddress

# ─────────────────────────────────────
# 🔧 ThirdWeb（Legacy用）
# ─────────────────────────────────────
VITE_THIRDWEB_CLIENT_ID=your_thirdweb_client_id_here
